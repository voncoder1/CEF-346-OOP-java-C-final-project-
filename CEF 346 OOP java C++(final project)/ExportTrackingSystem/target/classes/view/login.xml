<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.LoginController">
    <Label text="Login" style="-fx-font-size: 24px;" />
    <TextField fx:id="usernameField" promptText="Username or Email" />
    <PasswordField fx:id="passwordField" promptText="Password" />
    <Button text="Login" onAction="#handleLogin" />
    <Hyperlink text="Don't have an account? Sign up" onAction="#gotoSignup" />
</VBox>
