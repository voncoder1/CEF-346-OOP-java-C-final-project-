<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.SignupController">
    <Label text="Sign Up" style="-fx-font-size: 24px;" />
    <TextField fx:id="usernameField" promptText="Username" />
    <TextField fx:id="emailField" promptText="Email" />
    <PasswordField fx:id="passwordField" promptText="Password" />
    <Button text="Sign Up" onAction="#handleSignup" />
    <Hyperlink text="Already have an account? Login" onAction="#gotoLogin" />
</VBox>
